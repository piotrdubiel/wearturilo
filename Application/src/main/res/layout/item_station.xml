<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground">

    <TextView
            android:id="@+id/id_tv_station_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_16"
            android:layout_margin="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            tools:text="35345"/>


    <TextView
            android:id="@+id/id_tv_bike_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:drawablePadding="2dp"
            android:layout_marginRight="15dp"
            android:drawableTop="@drawable/ic_directions_bike_black_24dp"
            android:textSize="15sp"/>


    <TextView
            android:id="@+id/id_tv_station_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_toEndOf="@id/id_tv_bike_number"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:layout_toStartOf="@id/id_tv_station_id"
            tools:text="ul. Gałczyńskiego - ul. Foksal"/>


    <TextView
            android:id="@+id/id_tv_station_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/id_tv_station_name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="8dp"
            tools:text="4km"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="2dp"
          android:background="#222222"
          android:layout_alignParentBottom="true"/>

</RelativeLayout>